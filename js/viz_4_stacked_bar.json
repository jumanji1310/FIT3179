{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": "container",
    "config": {
        "font": "Tahoma"
    },
    "data": {
        "url": "https://raw.githubusercontent.com/jumanji1310/FIT3179/main/data/broadband_type.csv"
    },
    "mark": "bar",
    "params": [
        {
          "name": "type_selection",
          "value": null,
          "bind": {
            "input": "radio",
            "options": [
              null,
              "Other",
              "Cable",
              "Fibre",
              "DSL",
              "Mobile wireless"            ],
            "labels": [
              "Show All",
              "Other",
              "Cable",
              "Fibre",
              "DSL",
              "Mobile"
            ],
            "name": "Filter by connection type: "
          }
        }
      ],
    "transform": [
        {"filter": "type_selection == null || datum['Broadband type'] == type_selection"},
        {
            "calculate": "if (datum['Broadband type'] == 'Mobile wireless', 0, if( datum['Broadband type'] == 'DSL',1, if( datum['Broadband type'] == 'Fibre', 2, if( datum['Broadband type'] == 'Cable',3,4))))",
            "as": "order"
        }
    ],
    "encoding": {
        "x": {
            "field": "Date",
            "type": "ordinal",
            "axis": {
                "labelAngle": 0
            },
            "sort": [
                "Jun 2013, Dec 2013"
            ],
            "title": "Month and Year"
        },
        "y": {
            "aggregate": "sum",
            "field": "Subscribers",
            "type": "quantitative",
            "title": "Number of subscribers"
        },
        "order": {
            "field": "order"
        },
        "color": {
            "title":"Connection type",
            "field": "Broadband type",
            "type": "nominal",
            "sort": [
                "Mobile wireless",
                "DSL"
            ],
            "scale": {
                "domain": [
                    "Other",
                    "Cable",
                    "Fibre",
                    "DSL",
                    "Mobile wireless"
                ],
                "range": [
                    "#ff7f00",
                    "#4daf4a",
                    "#377eb8",
                    "#e7ba52",
                    "#984ea3"
                ]
            }
        },
        "tooltip": [
            {
                "field": "Date",
                "type": "nominal",
                "title": "Date"
            },
            {
                "field": "Broadband type",
                "type": "nominal",
                "title": "Broadband type"
            },
            {
                "field": "Subscribers",
                "type": "quantitative",
                "title": "Total subscriptions for broadband type",
                "format": ","
            },
            {
                "field": "Total Broadband subscribers",
                "type": "quantitative",
                "title": "Total broadband subscribers",
                "format": ","
            }
        ]
    }
}