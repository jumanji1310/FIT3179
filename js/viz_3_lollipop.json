{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 400,
    "data": {
        "url": "../data/top_mobile.csv"
    },
    "encoding": {
        
        "y": {
            "field": "Company",
            "type": "nominal",
            "title": "Mobile company",
            "sort": "-x"
        },
        "x": {
            "field": "Total_subscriptions",
            "type": "quantitative",
            "title": "Total subscriptions (in millions)"
        },
        "tooltip":[
            {"field": "Country", "type": "nominal", "title":"Country"},
            {"field": "Total_subscriptions", "type": "quantitative", "title":"Total subscriptions"}
        ]
    },
    "layer": [
        {
            "mark": {
                "type": "bar",
                "fill": "red",
                "height": 5
            }
        }
    ]
}