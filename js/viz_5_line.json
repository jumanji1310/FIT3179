{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 400,
    "data": {
        "url": "../data/subscribers_and_downloads.csv"
    },
    "repeat": {
        "layer": [
            "Broadband subscribers",
            "Mobile subscribers",
            "Mobile downloads",
            "Broadband downloads"
        ]
    },
    "resolve": {"scale": {"y": "independent"}},
    "spec": {
        "mark": {
            "type": "line",
            "point": true
        },
        "encoding": {
            "y": {
                "field": {
                    "repeat": "layer"
                },
                "type": "quantitative",
                "title": "Total subscribers"
            },
            "x": {
                "field": "Date",
                "type": "nominal",
                "axis": {
                    "labelAngle": 0
                },
                "sort": [
                    "Jun 2013, Dec 2013"
                ],
                "title": "Month and Year"
            },
            "color": {
                "datum": {
                    "repeat": "layer"
                },
                "type": "nominal"
            }
        }
    }
}