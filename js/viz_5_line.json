{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "config": {
        "font": "Tahoma"
    },
    "width": "container",
    "height": "container",
    "data": {
        "url": "https://raw.githubusercontent.com/jumanji1310/FIT3179/main/data/subscribers_and_downloads2.csv"
    },
    "params": [
        {
          "name": "category_selection",
          "value": null,
          "bind": {
            "input": "radio",
            "options": [
              null,
                "Broadband downloads",
                "Mobile downloads"
            ],"labels": [
              "Show All",
                "Broadband",
                "Mobile"
            ],
            "name": "Filter by download type: "
          }
        }
    ],
    "mark": {
        "type": "line",
        "point": true
    },
    "transform": [
        {
            "calculate": "split(datum.Date, ' ')",
            "as": "SplitDate"
        },
        {
            "filter":"datum.Category == category_selection || category_selection == null"
        }
    ],
    "encoding": {
        "y": {
            "field": "Value",
            "type": "quantitative",
            "title": "Total downloads (TB)",
            "axis": {
                "labelFontSize": 15,
                "titleFontSize": 18,
                "format": "1s"
            }
        },
        "x": {
            "field": "SplitDate",
            "type": "ordinal",
            "axis": {
                "labelAngle": 0,
                "labelFontSize": 12,
                "titleFontSize": 18
            },
            "sort": [
                "Jun 2013, Dec 2013"
            ],
            "title": "Month and Year"
        },
        "color": {
            "field": "Category",
            "type": "nominal",
            "legend": {
                "titleFontSize": 15,
                "labelFontSize": 12
            },
            "scale":{
                "domain":["Broadband downloads","Mobile downloads"],
                "range":[
                    "red",
                    "blue"
                ]
            }
        },
        "tooltip": [
            {
                "field": "Date",
                "type": "nominal",
                "title": "Date"
            },
            {
                "field": "Category",
                "type": "nominal",
                "title": "Download type"
            },
            {
                "field": "Value",
                "type": "quantitative",
                "title": "Data downloaded in terabytes (TB)",
                "format": ","
            }
        ]
    }
}