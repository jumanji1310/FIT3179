{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "config": {
        "font": "Tahoma"
    },
    "width": "container",
    "height": "container",
    "data": {
        "url": "../data/subscribers_and_downloads2.csv"
    },
    "mark": {
        "type": "line",
        "point": true
    },
    "encoding": {
        "y": {
            "field": "Value",
            "type": "quantitative",
            "title": "Total downloads (TB)",
            "axis":{
              "labelFontSize": 15,
              "titleFontSize": 18,
              "format": "1s"
            }
        },
        "x": {
            "field": "Date",
            "type": "ordinal",
            "axis": {
                "labelAngle": 0,
                "labelFontSize": 12,
                "titleFontSize": 18
            },
            "sort": [
                "Jun 2013, Dec 2013"
            ],
            "title": "Month and Year"
        },
        "color": {
            "field": "Category",
            "type": "nominal",
            "legend":{
                "titleFontSize":15,
                "labelFontSize": 12
            }
        },
        "tooltip": [
            {
                "field": "Date",
                "type": "nominal",
                "title": "Date"
            },
            {
                "field": "Category",
                "type": "nominal",
                "title": "Download type"
            },
            {
                "field": "Value",
                "type": "quantitative",
                "title": "Data downloaded in terabytes (TB)",
                "format": ","
            }
        ]
    }
}