{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "title": "COVID-19 Cases per Country (13 Oct 2020)",
    "data": {
      "url": "../data/test.csv"
    },
    "transform": [
      {
        "calculate": "datum.Confirmed/datum.Population * 10000",
        "as": "Cases per 10,000 Population"
      }
    ],
    "encoding": {
        "x": {"field": "Broadband_speed", "type": "quantitative","title": "Average Broadband Speed (Mbits/s)"},
        "y": {"field": "Mobile_speed", "type": "quantitative","title": "Average Mobile Speed (Mbits/s)"}
      },
    "layer": [
      {
        "mark": "circle",
        "encoding": {
          "color": {
            "field": "Continent",
            "type": "nominal",
            "scale": {
              "domain": [
                "North America",
                "South America",
                "Europe",
                "Africa",
                "Asia",
                "Oceania"
              ],
              "range": [
                "#e41a1c",
                "#984ea3",
                "#ff7f00",
                "#a6cee3",
                "#377eb8",
                "#a65628"
              ]
            }
          },
          "opacity": {"value": 0.6},
          "tooltip": [
            {"field": "Country", "type": "nominal"}
          ]
        }
      }
    ]
  }