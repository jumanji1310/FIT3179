{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Internet users per 10,000 population by country in 2021/2022",
        "fontSize": 20
    },
    "width": 800,
    "height": 400,
    "projection": {
        "type": "equalEarth"
    },
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/jumanji1310/FIT3179/main/map/ne_110m_admin_0_countries.topojson",
                "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
              },
              "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/jumanji1310/FIT3179/main/map/ne_110m_admin_0_countries.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "transform": [
                {
                    "lookup": "properties.NAME",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/jumanji1310/FIT3179/main/data/no_users.csv"
                        },
                        "key": "Country",
                        "fields": [
                            "users",
                            "Population"
                        ]
                    }
                },
                {
                    "calculate": "round((10000*(datum.users+0))/(datum.Population + 0.1))",
                    "as": "Total users"
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "lightgray"
            },
            "encoding": {
                "color": {
                    "field": "Total users",
                    "type": "quantitative",
                    "title": "Users per 10,000",
                    "scale": {
                        "type": "threshold",
                        "domain": [
                            2500,
                            5000,
                            7500
                        ],
                        "range": ["#3ACBE8", "#1CA3DE", "#0160C9", "#0041C7"]
                    }
                },
                "tooltip": [
                    {
                        "field": "properties.NAME",
                        "type": "nominal",
                        "title": "Country Name"
                    },
                    {
                        "field": "Total users",
                        "type": "quantitative",
                        "title": "Number of users per 10,000"
                    }
                ]
            }
        }
    ]
}