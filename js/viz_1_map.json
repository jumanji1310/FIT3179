{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "config": {
        "font": "Tahoma"
    },
    "width": "container",
    "height": 600,
    "projection": {
        "type": "equalEarth"
    },
    "data": {
        "url": "https://raw.githubusercontent.com/jumanji1310/FIT3179/main/map/ne_110m_admin_0_countries.topojson",
        "format": {
            "type": "topojson",
            "feature": "ne_110m_admin_0_countries"
        }
    },
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/jumanji1310/FIT3179/main/map/oceans.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "oceans"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "skyblue"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/jumanji1310/FIT3179/main/map/ne_110m_admin_0_countries.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_graticules_30"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": null,
                "stroke": "lightgray"
            }
        },
        {

            "transform": [
                {
                    "lookup": "properties.NAME",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/jumanji1310/FIT3179/main/data/no_users.csv"
                        },
                        "key": "Country",
                        "fields": [
                            "users",
                            "Population"
                        ]
                    }
                },
                {
                    "calculate": "100*(datum.users+0)/(datum.Population + 0.1) ",
                    "as": "Percentage"
                },
                {
                    "calculate": "(datum.users+0)/(datum.Population + 0.1) ",
                    "as": "Percentage tooltip"
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "lightgray"
            },
            "encoding": {
                "color": {
                    "field": "Percentage",
                    "type": "quantitative",
                    "title": ["Percentage of", "population"],
                    "scale": {
                        "type": "threshold",
                        "domain": [
                            25,
                            50,
                            75
                        ],
                        "range": [
                            "#ffffcc",
                            "#c2e699",
                            "#78c679",
                            "#238443"
                        ]
                    },
                    "legend":{
                        "titleFontSize":18,
                        "labelFontSize": 15
                    }
                },
                "tooltip": [
                    {
                        "field": "properties.NAME",
                        "type": "nominal",
                        "title": "Country Name"
                    },
                    {
                        "field": "Percentage tooltip",
                        "type": "quantitative",
                        "title": "Percentage of population",
                        "format": ".2%"
                    },
                    {
                        "field": "users",
                        "type": "nominal",
                        "title": "Total internet users",
                        "format": ","
                    }
                ]
            }
        },
        {
          "transform": [
            {
              "lookup": "properties.NAME",
              "from": {
                "data": {
                  "url": "../data/countryInfo.csv"
                },
                "key": "name",
                "fields": ["latitude", "longitude","info"]
              }
            },
            {
                "calculate": "split(datum.info, ' ')",
                "as": "SplitInfo"
            }
          ],
          "mark": {"type": "text"},
          "encoding": {
            "longitude": {"field": "longitude", "type": "quantitative"},
            "latitude": {"field": "latitude", "type": "quantitative"},
            "text": {"field": "SplitInfo", "type": "nominal"},
            "opacity": {
              "condition": {
                "test": "datum['properties.NAME'] == 'Australia' || datum['properties.NAME'] == 'China' || datum['properties.NAME'] == 'United States of America' || datum['properties.NAME'] == 'Russia'",
                "value": 1
              },
              "value": 0
            },
            "size": {
                "value": 17
            }
          }
        }
    ]
}